{
  "manifest_version": 3,
  "name": "Bitcoin Mini",
  "version": "1.0.0",
  "description": "Simple Bitcoin price, fees, and address tracking",
  
  "permissions": ["storage"],
  
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://mempool.space/*",
    "https://blockstream.info/*"
  ],
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
